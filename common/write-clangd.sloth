#!/usr/bin/env sloth

# This is an example of how to write .clangd file with absolute include paths

with ($cwd = $scriptDir) {
  let juceRoot = "${ $cwd }/../ignore/JUCE"
  let clangD = "# Generated by write-clangd.sloth

CompileFlags:
  CompilationDatabase: Builds/CMake
  Add:
    - -DJUCE_GLOBAL_MODULE_SETTINGS_INCLUDED=1

    - -I${ juceRoot }/modules
    - -I${ $cwd }/JuceLibraryCode
"

  clangD -> './.clangd'
}
